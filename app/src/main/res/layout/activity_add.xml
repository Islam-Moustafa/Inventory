<?xml version="1.0" encoding="utf-8"?>

<!-- Layout for add new product -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/addImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/product_image"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:text="touch to take image"
                android:textColor="#AEB6BD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">
                <TextView
                    android:text="PRODUCT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#4285f4"
                    android:textStyle="bold"
                    android:layout_marginRight="4dp" />

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="4dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp">
                    <!-- Name field -->
                    <TextView
                        android:text="Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#4285f4"
                        android:textSize="16sp"/>
                    <EditText
                        android:id="@+id/productNameET"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:background="@drawable/rectangle_edittexts"
                        android:paddingLeft="8dp"
                        android:textSize="16sp"/>

                    <TextView
                        android:text="Model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#4285f4"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp" />
                    <EditText
                        android:id="@+id/productModelET"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:background="@drawable/rectangle_edittexts"
                        android:paddingLeft="8dp"
                        android:textSize="16sp"/>

                    <TextView
                        android:text="Price $"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="#4285f4" />
                    <EditText
                        android:id="@+id/productPriceET"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:background="@drawable/rectangle_edittexts"
                        android:paddingLeft="8dp"/>

                    <TextView
                        android:text="Quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="#4285f4" />
                    <EditText
                        android:id="@+id/productQuantityET"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:background="@drawable/rectangle_edittexts"
                        android:paddingLeft="8dp" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="32dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SUPPLIER"
                    android:textStyle="bold"
                    android:textColor="#4285f4"
                    android:layout_gravity="top"
                    android:textSize="16sp"
                    android:layout_marginRight="4dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="#4285f4"
                        android:textSize="16sp"/>
                    <EditText
                        android:id="@+id/supplierNameET"
                        android:maxLines="1"
                        android:inputType="textCapWords"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_edittexts"
                        android:paddingLeft="8dp"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        android:layout_marginTop="8dp"
                        android:textColor="#4285f4"
                        android:textSize="16sp"/>
                    <EditText
                        android:id="@+id/supplierPhoneET"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_edittexts"
                        android:paddingLeft="8dp"
                        android:inputType="phone"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:layout_marginTop="8dp"
                        android:textColor="#4285f4"
                        android:textSize="16sp"/>
                    <EditText
                        android:id="@+id/supplierEmailET"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_edittexts"
                        android:paddingLeft="8dp"
                        android:inputType="textEmailAddress"
                        android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
